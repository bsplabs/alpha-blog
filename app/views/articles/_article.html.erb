<div class="container">
    <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-md-8 col-xs-12 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        เขียนโดย <%= article.user.username if article.user %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                        <%= link_to "อ่าน", article_path(article), class: "btn btn-outline-success" %>
                        <%= link_to "แก้ไข", edit_article_path(article), class: "btn btn-outline-warning" %>
                        <%= link_to "ลบ", article_path(article), method: :delete, data: { confirm: "คุณต้องการลบบทความนี้ ใช่หรือไม่" }, class: "btn btn-outline-danger" %>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(article.created_at) %> ago,
                        edited <%= time_ago_in_words(article.updated_at) %> ago </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>