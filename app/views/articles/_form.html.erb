<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-xs-12">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label "หัวข้อ", class: "col-md-2 col-form-label text-white" %><br/>
                    <div class="col-md-10">
                        <%= f.text_field :title, class: "form-control shadow rounded",  placeholder: "หัวข้อหรือชื่อเรื่องของบทความ" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label "เนื้อหา", class: "col-md-2 col-form-label text-white" %><br/>
                    <div class="col-md-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "เนื้อหาของบทความ" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ กลับไปที่หน้าบทความทั้งหมด ]', articles_path, class: "text-info" %>
        </div>
    </div>
</div>