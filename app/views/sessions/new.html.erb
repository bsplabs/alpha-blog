<h1 class="text-center mt-4">เข้าสู่ระบบ Dark[CMD]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-xs-12">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

                <div class="form-group row">
                    <%= f.label "อีเมลล์", class: "col-md-2 col-form-label text-white" %><br/>
                    <div class="col-md-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "อีเมลล์" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label "รหัสผ่าน", class: "col-md-2 col-form-label text-white" %><br/>
                    <div class="col-md-10">
                        <%= f.password_field :password, class: "form-control shadow rounded",  placeholder: "รหัสผ่าน" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit "เข้าสู่ระบบ", class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ กลับไปที่หน้าบทความทั้งหมด ]', articles_path, class: "text-info" %>
        </div>
    </div>
</div>